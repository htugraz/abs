# $Id: PKGBUILD,v 1.5 2008/09/24 07:16:54 ronald Exp $
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=bdf-unifont
pkgver=7.0.03
pkgrel=1
pkgdesc="GNU Unifont Glyphs"
arch=('any')
license=('custom' 'GPL2')
url="http://unifoundry.com/unifont.html"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=unifont.install
source=("http://unifoundry.com/pub/unifont-${pkgver}/font-builds/unifont-${pkgver}.bdf.gz" 'LICENSE')
sha1sums=('f1315504a67d4b7b5d7d6b25dff02d84f9f67aab'
          'e4ba558b4af9b8ab0f129c1f1788e168e412b9be')

package() {
  install -Dm644 "${srcdir}/unifont-${pkgver}.bdf" \
    "${pkgdir}/usr/share/fonts/misc/unifont.bdf"
  install -Dm644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
