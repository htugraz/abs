# $Id: PKGBUILD 249226 2015-10-13 18:10:49Z heftig $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-getting-started-docs
pkgver=3.18.1
pkgrel=1
pkgdesc="Help a new user get started in GNOME"
arch=(any)
license=('CCPL:cc-by-sa-3.0')
# gst plugins required to decode help videos
depends=(yelp gst-plugins-base gst-plugins-good)
makedepends=(yelp-tools)
url="http://www.gnome.org"
groups=(gnome-extra)
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
sha256sums=('296d744d828ca5b60baeffbc158e4aa5ea844fcd13e6a22ed3fc9048c0568866')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
