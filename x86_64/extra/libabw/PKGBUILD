# $Id: PKGBUILD 227969 2014-12-23 20:48:19Z andyrtr $
# Maintainer: AndyRTR <andyrtr@archlinux.org>

pkgname=libabw
pkgver=0.1.1
pkgrel=1
pkgdesc="a library that parses the file format of AbiWord documents"
arch=('i686' 'x86_64')
url="https://wiki.documentfoundation.org/DLP/Libraries/libabw"
license=('MPL')
depends=('librevenge' 'libxml2' )
makedepends=('doxygen' 'gperf' 'boost')
source=(http://dev-www.libreoffice.org/src/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('6be55a46078b593ec20cad9bb8730c3e')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

check() {
  cd $pkgname-$pkgver
  make -k check
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
