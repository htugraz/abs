# Contributor: Jonas Nyr√©n <jonas.nyren*mindkiller.com>

pkgname=libsidplayfp
pkgver=1.5.2
pkgrel=2
pkgdesc='Library to play Commodore 64 music derived from libsidplay2'
url='http://sourceforge.net/projects/sidplay-residfp/'
arch=('i686' 'x86_64')
license=('GPL')
depends=('gcc-libs')
makedepends=('vice')
optdepends=('vice: better SID support')
source=("http://downloads.sourceforge.net/project/sidplay-residfp/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.gz")
sha1sums=('050a107f0cb269f6d8f8892ef4c091a5ce751aec')

build() {
	cd "${pkgname}-${pkgver}"
	./configure --prefix=/usr
	make
}

package() {
	cd "${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install

	install -d "${pkgdir}/usr/share/sidplayfp"
	ln -t "${pkgdir}/usr/share/sidplayfp" -s /usr/lib/vice/C64/{kernal,basic,chargen}
}
