EXTRAMODULES=extramodules-3.11-ARCH

post_install() {
  # updating module dependencies
  echo ">>> Updating module dependencies. Please wait ..."
  depmod $(cat /usr/lib/modules/$EXTRAMODULES/version) > /dev/null 2>&1
}

post_upgrade() {
  post_install
}

# arg 1:  the old package version
post_remove() {
  post_install
}
