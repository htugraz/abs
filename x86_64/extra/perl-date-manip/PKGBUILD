# $Id: PKGBUILD 216736 2014-07-09 02:27:17Z fyan $
# Maintainer: Felix Yan <felixonmars@gmail.com>

pkgname=perl-date-manip
pkgver=6.46
pkgrel=1
pkgdesc="Date::Manip - date manipulation routines"
arch=('any')
license=('PerlArtistic')
url="http://search.cpan.org/dist/Date-Manip/"
depends=('perl')
checkdepends=('perl-test-inter')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/S/SB/SBECK/Date-Manip-${pkgver}.tar.gz)
md5sums=('828fbce4362ab068873f519a79a3767d')

build() {
  cd Date-Manip-${pkgver}
  perl Build.PL installdirs=vendor
  perl Build
}

check() {
  cd Date-Manip-${pkgver}
  perl Build test
}

package() {
  cd Date-Manip-${pkgver}
  perl Build destdir="${pkgdir}" install
}
