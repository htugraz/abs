post_install() {
    glib-compile-schemas /usr/share/glib-2.0/schemas
    update-desktop-database -q
}

pre_upgrade() {
    if [ -f /usr/share/gconf/schemas/gedit.schemas ]; then
        gconfpkg --uninstall gedit
    fi
}

post_upgrade() {
    post_install $1
}

post_remove() {
    post_install $1
}
