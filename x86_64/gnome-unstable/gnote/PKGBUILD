# $Id: PKGBUILD 247459 2015-09-25 16:00:42Z heftig $
# Maintainer:  Ionut Biru <ibiru@archlinux.org>
# Contributor: uastasi <uastasi@archlinux.us>

pkgname=gnote
pkgver=3.17.1
pkgrel=1
pkgdesc='A note taking application'
arch=('i686' 'x86_64')
url='http://live.gnome.org/Gnote'
license=('GPL3')
depends=('gtkmm3' 'libxslt' 'hicolor-icon-theme' 'desktop-file-utils' 'dconf'
         'libsecret')
makedepends=('intltool' 'itstool' 'boost')
install=gnote.install
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz)
sha256sums=('83325032cb948f1dc9dfe266e69a447e755cf7cbf94327c5440f2e380512fa99')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib/gnote \
    --disable-scrollkeeper \
    --disable-schemas-compile \
    --disable-static
  make
}

check() {
  cd $pkgname-$pkgver
  make check
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
