# $Id: PKGBUILD 199668 2013-11-15 10:13:20Z andrea $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kdenetwork-kdnssd
pkgver=4.11.90
pkgrel=1
pkgdesc='Monitors the network for DNS-SD services'
url='https://projects.kde.org/projects/kde/kdenetwork/kdnssd'
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
groups=('kde' 'kdenetwork')
depends=('kdebase-runtime')
makedepends=('cmake' 'automoc4')
source=("http://download.kde.org/unstable/${pkgver}/src/kdnssd-${pkgver}.tar.xz")
sha1sums=('ae90e717ceabcb3b2c26ddd98c3e74ef8876319e')

build() {
  mkdir build
  cd build
  cmake ../kdnssd-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR=$pkgdir install
}
