# $Id: PKGBUILD 207807 2014-03-15 07:48:26Z andrea $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kqtquickcharts
pkgver=4.12.90
pkgrel=1
pkgdesc="A QtQuick plugin to render beautiful and interactive charts"
url="https://projects.kde.org/projects/kde/kdeedu/kqtquickcharts"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kdelibs')
makedepends=('cmake' 'automoc4')
source=("http://download.kde.org/unstable/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")
sha1sums=('da404d20c421f5f910766e3acd989a4348a5b295')

prepare() {
  mkdir build
}

build() {
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
