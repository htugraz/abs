# $Id: PKGBUILD 208374 2014-03-22 17:51:43Z andrea $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kqtquickcharts
pkgver=4.12.95
pkgrel=1
pkgdesc="A QtQuick plugin to render beautiful and interactive charts"
url="https://projects.kde.org/projects/kde/kdeedu/kqtquickcharts"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kdelibs')
makedepends=('cmake' 'automoc4')
source=("http://download.kde.org/unstable/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")
sha1sums=('6b145eb601d75e09b7ab7cf3abd5dfa5d93512b5')

prepare() {
  mkdir build
}

build() {
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
