# $Id: PKGBUILD 199680 2013-11-15 10:17:09Z andrea $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kdesdk-dolphin-plugins
pkgver=4.11.90
pkgrel=1
pkgdesc='Extra Dolphin plugins'
url='https://projects.kde.org/projects/kde/kdesdk/dolphin-plugins'
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
groups=('kde' 'kdesdk')
depends=('kdebase-runtime' 'kdebase-lib')
makedepends=('cmake' 'automoc4')
optdepends=('bzr: bazaar support'
            'git: git support'
            'mercurial: hg support'
            'subversion: svn support')
install=${pkgname}.install
source=("http://download.kde.org/unstable/${pkgver}/src/dolphin-plugins-${pkgver}.tar.xz")
sha1sums=('ce598e8acfc8b4746c223e6cc8996f93897d93b6')

build() {
  mkdir build
  cd build
  cmake ../dolphin-plugins-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR=$pkgdir install
}
