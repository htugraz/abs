# $Id: PKGBUILD 207925 2014-03-15 08:08:44Z andrea $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kdetoys-kteatime
pkgver=4.12.90
pkgrel=1
pkgdesc='Tea Cooker'
url='http://kde.org/applications/games/kteatime/'
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
groups=('kde' 'kdetoys')
depends=('kdebase-runtime')
makedepends=('cmake' 'automoc4')
install=${pkgname}.install
source=("http://download.kde.org/unstable/${pkgver}/src/kteatime-${pkgver}.tar.xz")
sha1sums=('113ea28b16bde2125f4a1fd9df980c3495264675')

build() {
  mkdir build
  cd build
  cmake ../kteatime-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR=$pkgdir install
}
