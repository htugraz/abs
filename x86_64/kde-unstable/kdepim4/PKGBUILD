	pkgdesc='A viewer/extractor for TNEF files'
	depends=('kdebase-runtime' 'kdepimlibs4')
	provides=('ktnef')
	url="https://projects.kde.org/projects/kde/kdepim/ktnef"
    install=kdepim-ktnef.install
