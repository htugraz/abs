# $Id: PKGBUILD 219245 2014-08-03 14:02:33Z svenstaro $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kdeutils-filelight
pkgver=4.13.97
pkgrel=1
pkgdesc='View disk usage information'
url='http://kde.org/applications/utilities/filelight'
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kdebase-runtime')
makedepends=('cmake' 'automoc4')
groups=('kde' 'kdeutils')
replaces=('filelight')
conflicts=('filelight')
install=${pkgname}.install
source=("http://download.kde.org/unstable/${pkgver}/src/filelight-${pkgver}.tar.xz")
sha1sums=('10b4d69247d1446986627e73a9d40058eaeb3e1d')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../filelight-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $srcdir/build
  make DESTDIR=$pkgdir install
}
