# $Id: PKGBUILD 207894 2014-03-15 08:03:08Z andrea $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kdemultimedia-dragonplayer
pkgver=4.12.90
pkgrel=1
pkgdesc="A multimedia player where the focus is on simplicity, instead of
features"
url='http://kde.org/applications/multimedia/dragonplayer/'
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
groups=('kde' 'kdemultimedia')
depends=('kdebase-runtime')
makedepends=('cmake' 'automoc4')
install="${pkgname}.install"
source=("http://download.kde.org/unstable/${pkgver}/src/dragon-${pkgver}.tar.xz")
sha1sums=('a5f6fcb1b505989c149bc4233f810bd81ecc74fa')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../dragon-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "${srcdir}"/build
  make DESTDIR="${pkgdir}" install
}
