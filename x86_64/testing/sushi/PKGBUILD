# $Id: PKGBUILD 210063 2014-04-09 11:07:21Z jgc $
# Maintainer: Ionut Biru <ibiru@archlinux.org>

pkgname=sushi
pkgver=3.11.90
pkgrel=1
pkgdesc="A quick previewer for Nautilus"
arch=(i686 x86_64)
url="http://www.gnome.org"
license=('GPL2')
groups=(gnome)
depends=('clutter-gtk' 'clutter-gst' 'gjs' 'libmusicbrainz5' 'webkitgtk' 'gtksourceview3' 'evince')
install=sushi.install
makedepends=('intltool' 'gobject-introspection')
source=(http://download.gnome.org/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
sha256sums=('b461720e51c79a60db04f8f7f56d3fd1cbb69b03f8df122a9fc9f29717a269fd')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr --libexecdir=/usr/lib/sushi
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

