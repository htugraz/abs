# $Id: PKGBUILD 206727 2014-03-05 10:10:43Z andrea $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=nepomuk-widgets
pkgver=4.12.3
pkgrel=1
pkgdesc="The Library containing the Nepomuk Widgets"
url="https://projects.kde.org/projects/kde/kdelibs/nepomuk-widgets"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('nepomuk-core')
makedepends=('cmake' 'automoc4')
source=("http://download.kde.org/stable/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")
sha1sums=('f3b2642bbe153d603b7f3e087411bd3bfcdd629d')

build() {
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
