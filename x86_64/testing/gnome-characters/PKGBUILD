# $Id: $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-characters
pkgver=3.16.0
pkgrel=1
pkgdesc="Simple utility application to find and insert unusual characters"
arch=(i686 x86_64)
url="http://gnome.org"
license=('GPL2')
depends=(gjs gtk3 libunistring)
makedepends=(intltool gobject-introspection)
install=gnome-characters.install
groups=('gnome-extra')
source=(http://download.gnome.org/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
sha256sums=('4a6cb4bbb954251127daf49163b2d28ee1e392fa1aa8877bba7c27dc2d7bbf5f')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
