# $Id: PKGBUILD 112096 2014-05-29 12:25:47Z spupykin $
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=kvirc
pkgver=4.2.0
pkgrel=4
pkgdesc="Qt-based IRC client"
url="http://www.kvirc.net"
depends=('python2' 'libxss' 'qtwebkit')
arch=(i686 x86_64)
makedepends=('cmake')
license=('GPL')
install=kvirc.install
source=(ftp://ftp.kvirc.de/pub/kvirc/$pkgver/source/$pkgname-$pkgver.tar.bz2)
md5sums=('bf7229aaae132933a18b6a35125a2328')

build() {
  cd $srcdir
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DWANT_KDE4=OFF \
    -DWANT_PERL=ON \
    -DWANT_PHONON=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=$pkgdir install
}
