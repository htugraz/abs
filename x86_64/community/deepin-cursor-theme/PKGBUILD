pkgname=deepin-cursor-theme
pkgver=15.10.0
pkgrel=1
pkgdesc='Cursor theme from Linux Deepin'
arch=('any')
license=('LGPL3')
url="http://www.linuxdeepin.com/"
makedepends=('git')
source=("git+https://github.com/linuxdeepin/deepin-cursor-theme.git#tag=$pkgver")
sha256sums=('SKIP')

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}
