pkgname=0ad-data
_pkgname=0ad
pkgver=a17
_pkgver=0.0.17-alpha
pkgrel=1
pkgdesc="Cross-platform, 3D and historically-based real-time strategy game (data files)"
arch=('any')
url="http://play0ad.com/"
license=('GPL2' 'CCPL')
depends=()
makedepends=()
source=("http://sourceforge.net/projects/zero-ad/files/releases/$_pkgname-$_pkgver-unix-data.tar.xz")
md5sums=('1126364e787638ac2f0ca15997942c37')

package(){
  install -d ${pkgdir}/usr/share/${_pkgname}/data

  cp -r ${srcdir}/${_pkgname}-${_pkgver}/binaries/data ${pkgdir}/usr/share/${_pkgname}
}
