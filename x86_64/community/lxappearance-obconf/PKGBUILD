# $Id: PKGBUILD 107068 2014-03-12 10:38:49Z bpiotrowski $
# Maintainer: Bart≈Çomiej Piotrowski <nospam@bpiotrowski.pl>

pkgname=lxappearance-obconf
pkgver=0.2.1
pkgrel=2
pkgdesc='Plugin for LXAppearance to configure Openbox'
arch=('i686' 'x86_64')
license=('GPL2')
url='http://lxde.org/'
groups=('lxde')
depends=('lxappearance' 'openbox' 'libsm')
makedepends=('intltool')
source=(http://downloads.sourceforge.net/lxde/$pkgname-$pkgver.tar.gz)
md5sums=('1f061c96e0c78a6476421ca294ac24aa')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
