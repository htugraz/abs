pkgname=libdui
pkgver=1.2.0
pkgrel=1
pkgdesc='Deepin graphical user interface library'
arch=('i686' 'x86_64')
url="https://cr.deepin.io/dde/libdui"
license=('GPL3')
depends=('qt5-multimedia' 'qt5-x11extras')
makedepends=('git')
source=("git+https://cr.deepin.io/dde/libdui#tag=$pkgver")
sha256sums=('SKIP')

build(){
  cd "${pkgname}"
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd "${pkgname}"
  make INSTALL_ROOT="${pkgdir}" install
}
