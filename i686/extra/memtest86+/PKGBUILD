pkgname=memtest86+
pkgver=5.01
pkgrel=1
pkgdesc="An advanced memory diagnostic tool"
arch=('any')
url="http://www.memtest.org"
license=('GPL2')
source=(http://www.memtest.org/download/${pkgver}/${pkgname}-${pkgver}.bin.gz)
