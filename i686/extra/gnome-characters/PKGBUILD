# $Id: PKGBUILD 236343 2015-04-13 07:49:31Z heftig $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-characters
pkgver=3.16.1
pkgrel=1
pkgdesc="Simple utility application to find and insert unusual characters"
arch=(i686 x86_64)
url="http://gnome.org"
license=('GPL2')
depends=(gjs gtk3 libunistring)
makedepends=(intltool gobject-introspection)
install=gnome-characters.install
groups=('gnome-extra')
source=(http://download.gnome.org/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
sha256sums=('79cf3b95d0b626ac33bfc09f0d9fa7faa27915230dc1f3ac890c7d09018c915c')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}

