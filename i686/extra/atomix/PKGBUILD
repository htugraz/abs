# $Id: PKGBUILD 237228 2015-04-16 08:30:10Z heftig $
# Maintainer: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>

pkgname=atomix
pkgver=3.16.0
pkgrel=1
pkgdesc="Build molecules out of single atoms"
url="https://wiki.gnome.org/Apps/Atomix"
arch=(x86_64 i686)
license=(GPL2)
depends=(gtk3)
makedepends=(intltool)
groups=(gnome-extra)
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
sha256sums=('29b0dd200344d6ceb9e4e9ad6034a4d5d14bf06dead343a3b70331f81f66a630')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
