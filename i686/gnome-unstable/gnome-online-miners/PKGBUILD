# $Id: PKGBUILD 209194 2014-03-30 00:01:56Z heftig $
# Maintainer: Ionut Biru <ibiru@archlinux.org>

pkgname=gnome-online-miners
pkgver=3.12.0
pkgrel=1
pkgdesc="Tracker miners for online accounts"
arch=(i686 x86_64)
url="http://www.gnome.org"
license=(GPL)
depends=(libgdata gnome-online-accounts grilo libzapojit tracker gfbgraph)
source=(http://download.gnome.org/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
sha256sums=('734db67bb158a046bc8bbbe418f0fdaf6d8652ac86406907a8d17d069fa48f23')
 
build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --libexecdir=/usr/lib/$pkgname --disable-static
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
