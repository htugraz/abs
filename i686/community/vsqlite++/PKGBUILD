# $Id: PKGBUILD 127413 2015-02-09 16:15:52Z eworm $
# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=vsqlite++
pkgver=0.3.13
pkgrel=3
pkgdesc='SQLite wrapper library for C++'
arch=('i686' 'x86_64')
url='http://sourceforge.net/projects/sqlitepp/'
license=('custom')
depends=('sqlite')
makedepends=('boost')
source=("http://downloads.sourceforge.net/sqlitepp/${pkgname}-${pkgver}.tar.xz")
sha256sums=('40b3f8da840a5a40caf3a31faae584797d1b2ca339f6860053b0522165c9bc07')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}/"

	./configure --prefix=/usr
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}/"

	make DESTDIR="${pkgdir}" install

	install -D -m0644 COPYING "${pkgdir}"/usr/share/licenses/vsqlite++/COPYING
}

