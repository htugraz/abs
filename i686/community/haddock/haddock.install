pkgname=haddock
HS_DIR=usr/share/haskell/haddock

post_upgrade() {
  ${HS_DIR}/register.sh &> /dev/null
  post_remove
}

post_remove() {
  (cd usr/share/doc/ghc/html/libraries; ./gen_contents_index) &> /dev/null
}

pre_remove() {
  ${HS_DIR}/unregister.sh &> /dev/null
}

post_install() {
	post_upgrade
}

pre_upgrade() {
	pre_remove
}

