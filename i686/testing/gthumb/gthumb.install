post_install() {
  glib-compile-schemas /usr/share/glib-2.0/schemas
  update-desktop-database -q
  gtk-update-icon-cache -q -t -f /usr/share/icons/hicolor
}

pre_upgrade() {
  if (( $(vercmp $2 2.90.1) < 0 )); then
    gconfpkg --uninstall gthumb
  fi
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install
}
