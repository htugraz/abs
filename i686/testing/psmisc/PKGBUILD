# $Id: PKGBUILD 211800 2014-04-26 17:22:21Z eric $
# Maintainer: Eric BÃ©langer <eric@archlinux.org>

pkgname=psmisc
pkgver=22.21
pkgrel=2
pkgdesc="Miscellaneous procfs tools"
arch=('i686' 'x86_64')
url="http://psmisc.sourceforge.net/index.html"
license=('GPL')
groups=('base')
depends=('ncurses')
source=(http://downloads.sourceforge.net/psmisc/${pkgname}-${pkgver}.tar.gz psmisc-fuser.patch)
sha1sums=('09fabbef4539b58b6b8738a73da3d21d5daa1a58'
          'e739ad5b14ca836db5859f0755d8f2fc8e86de69')

prepare() {
  cd ${pkgname}-${pkgver}
  patch -p1 -i ../psmisc-fuser.patch
}

build() {
  cd ${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
