# $Id: PKGBUILD 200196 2013-11-22 09:27:38Z andrea $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kdeutils-kcharselect
pkgver=4.11.95
pkgrel=1
pkgdesc='Character Selector'
url="http://kde.org/applications/utilities/kcharselect/"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kdebase-runtime')
makedepends=('cmake' 'automoc4')
groups=('kde' 'kdeutils')
source=("http://download.kde.org/unstable/${pkgver}/src/kcharselect-${pkgver}.tar.xz")
sha1sums=('3b9b51d9ed2c2e3b6400f9cdac70abfde7baf7d1')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../kcharselect-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $srcdir/build
  make DESTDIR=$pkgdir install
}
