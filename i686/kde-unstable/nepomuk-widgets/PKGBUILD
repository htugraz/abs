# $Id: PKGBUILD 200428 2013-11-28 13:30:48Z andrea $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=nepomuk-widgets
pkgver=4.11.97
pkgrel=1
pkgdesc="The Library containing the Nepomuk Widgets"
url="https://projects.kde.org/projects/kde/kdelibs/nepomuk-widgets"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('nepomuk-core')
makedepends=('cmake' 'automoc4')
source=("http://download.kde.org/unstable/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")
sha1sums=('df1755472edf717c949c7257176f2039594b1a7b')

build() {
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
