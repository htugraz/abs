# $Id: PKGBUILD 218141 2014-07-25 15:10:06Z svenstaro $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kdeutils-filelight
pkgver=4.13.95
pkgrel=1
pkgdesc='View disk usage information'
url='http://kde.org/applications/utilities/filelight'
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kdebase-runtime')
makedepends=('cmake' 'automoc4')
groups=('kde' 'kdeutils')
replaces=('filelight')
conflicts=('filelight')
install=${pkgname}.install
source=("http://download.kde.org/unstable/${pkgver}/src/filelight-${pkgver}.tar.xz")
sha1sums=('6c236d7aa7be4c71d6848f72f5c166798f141a28')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../filelight-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $srcdir/build
  make DESTDIR=$pkgdir install
}
